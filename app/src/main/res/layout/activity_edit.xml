<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="213dp"
        android:layout_height="143dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/todo"
        android:onClick="UploadF"
        app:srcCompat="@drawable/profile_photo_add" />

    <EditText
        android:id="@+id/nama_profil"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/email_profil"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_profil"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/nohp_profil"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_profil"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/nama_profil"
        android:layout_marginBottom="20dp"
        android:text="@string/batal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/costum_button"
        android:onClick="EditProfil"
        android:layout_alignStart="@+id/nama_profil"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/nama_profil"
        android:layout_alignTop="@+id/button2"
        android:text="@string/simpan"
        android:textColor="@color/colorbtnmasuk"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@drawable/costum_button2"
        android:onClick="EditProfil"
        android:layout_alignEnd="@+id/nama_profil"
        />

    <Button
        android:id="@+id/reset"
        android:layout_width="329dp"
        android:layout_height="45dp"
        android:layout_below="@+id/nohp_profil"
        android:layout_centerHorizontal="true"
        android:text="Reset Password"
        android:textStyle="bold"
        android:textColor="@color/colorbtnmasuk"
        android:background="@drawable/costum_button3"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        />



</RelativeLayout>